<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVIKnotHiltKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#dd2c00</item>
        <item name="colorPrimaryVariant">#a30000</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
<!--        <item name="android:windowBackground">@color/orange_900</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1b1b1b</item>
        <item name="colorSecondaryVariant">#424242</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/MyBottomSheetDialogTheme</item>
    </style>

    <!-- BottomSheet Dialog-->
    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>
</resources>